---
const { path, image, date, excerpt } = Astro.props;
---
<a href={path}>
    <div class="lg:max-w-3xl lg:flex">
        <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t-[24px] lg:rounded-t-none lg:rounded-l-[24px] text-center overflow-hidden border border-b-0 border-gray-300 lg:border-r-0 lg:border-b" style=`background-image: url(${image})` title="Woman holding a mug"></div>
        <div class="border-r border-b border-l border-gray-300 lg:border-l-0 lg:border-t lg:border-gray-300 bg-white rounded-b-[24px] lg:rounded-l-none lg:rounded-r-[24px] p-4 flex flex-col justify-between leading-normal">
            <div class="mb-2">
                <p class="text-sm text-gray-600 flex items-center">
                    <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                        <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
                    </svg>
                    Members only
                </p>
                <div class="text-gray-900 font-bold mb-2">{excerpt}</div>
                <!-- <p class="text-gray-700 text-base">{excerpt}</p> -->
            </div>
            <div class="flex items-center">
                <img class="w-10 h-10 rounded-full mr-4" src="david-circle.png" alt="Avatar of David Jaimes">
                <div class="text-sm">
                    <p class="text-zinc-800 leading-none">David Jaimes</p>
                    <p class="text-zinc-600">{date}</p>
                </div>
            </div>
        </div>
    </div>
</a>