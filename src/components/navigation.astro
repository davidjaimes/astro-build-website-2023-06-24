---
import Icon from "./icon.astro";
---

<nav class="bg-zinc-800">
    <div class="max-w-4xl mx-auto px-4 md:px-6 sm:px-4 xs:px-6 lg:px-0 xl:px-0">
        <div class="flex justify-between">
            <div class="flex space-x-4">
                <!-- logo -->
                <div>
                    <a href="/" class="flex items-center py-5 text-zinc-300">
                        <Icon pathfill="#d4d4d8"></Icon>
                        <span class="font-bold text-lg">davidjaimes.com</span>
                    </a>
                </div>
                <!-- primary nav -->
                <div class="hidden md:flex flex items-center space-x-1">
                    <a href="" class="py-5 px-3 text-zinc-300 hover:text-gray-900">Features</a>
                    <a href="" class="py-5 px-3 text-zinc-300 hover:text-gray-900">Pricing</a>
                </div>
            </div>
            <!-- secondary nav -->
            <div class="hidden md:flex flex items-center space-x-1">
                <a href="" class="py-5 px-3 text-zinc-300">Login</a>
                <a href="" class="py-2 px-3 bg-yellow-400 hover:bg-yellow-300 text-yellow-900 hover:text-yellow-800 rounded transition duration-300">Signup</a>
            </div>
            <!-- mobile button goes here -->
            <div class="md:hidden flex items-center text-zinc-300">
                <button class="mobile-menu-button">
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <!-- mobile menu -->
    <div class="mobile-menu hidden md:hidden pb-8 px-24 divide-y divide-slate-700 text-zinc-100">
        <a href="" class="block py-2 px-4 text-md hover:bg-zinc-700">About</a>
        <a href="" class="block py-2 px-4 text-md hover:bg-zinc-700">macOS</a>
        <a href="" class="block py-2 px-4 text-md hover:bg-zinc-700">Documentation</a>
        <a href="" class="block py-2 px-4 text-md hover:bg-zinc-700">Terms of Use</a>
        <a href="" class="block py-2 px-4 text-md hover:bg-zinc-700">GitHub</a>
    </div>
</nav>

<script>
    // grab everything we need
    const btn = document.querySelector("button.mobile-menu-button");
    const menu = document.querySelector("div.mobile-menu");

    // add event listerners
    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });
</script>